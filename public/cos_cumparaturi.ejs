<form action="/cos_cumparaturi" method="GET">

    <h1> <%= title %></h1>
    <% if (products)
    { %>
        <div class="cart page">
            <ul class="list-group">
                <% for(let i=0;i<products.length;++i)
                {%>
                    <li class="list-group-item clearfix">
                        <div class="col-xs-5 text-center">
                            <strong><%=products[i].item.title%></strong>
                        </div>
                        <div class="col-xs-2 text-right">
                            <span class="badge"><%= products[i].quantity%></span>
                        </div>
                        <div class="col-xs-3 text-right"> 
                            <%= products[i].price%> RON 
                        </div>
                        <div class="col-xs-2 text-right">
                            <a href="/remove/<%= products[i].item.id %>" class="btn btn-default"></i> Remove</a>
                        </div>
                    </li>
                <% }%>
            </ul>
        </div>
        <div class="text-center">
            <strong>Total: <%=totalPrice%>RON</strong>
        </div>
        <hr>
        <div class="text-center">
            <a href="#" type="button" class="btn btn-success">Checkout</a>
        </div>
    <%} else 
    { %>
    <div class="text-center">
    <strong>Coșul tău de cumpărături este gol</strong> 
    </div>
    <% }
     %>
</form>