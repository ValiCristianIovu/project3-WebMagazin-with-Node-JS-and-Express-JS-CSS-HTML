<form action="/index" method="GET">
    <h1>Bun venit pe  <%= title %></h1>
    
    <br>
    <% for(let i=0;i<products.length;++i) {%>
        <div class="row">
            <div class="col-md-12">
                <div class="thumbnail">
                    <div class="caption">
                        <h3><%= products[i].title%></h3>
                        <img src=<%=products[i].logolocation%> width="150" height="70">
                         <p class="description"><%= products[i].description%> </p>
                         <div class="clearfix">
                            <div class="price pull-left"><i class="fa fa-tag" aria-hidden="true"></i><%= products[i].price%> RON</div>
                            <a href="/add/<%= products[i].id %>" class="btn btn-default pull-right" role="button"><i class="fa fa-shopping-cart" aria-hidden="true"></i>Adaugă în coș</a>
                            <br>
                         </div>
                    </div>
                </div>
            </div>
        </div>
        <% }%>
</form>